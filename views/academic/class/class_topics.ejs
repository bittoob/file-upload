<!DOCTYPE html>
<html>
<head>
  <title>Class - Topics</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f0f0f0;
      text-align: center;
      
    }

    .container {
      max-width: 800px;
      padding: 20px;
      background-color: #fff;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      
      margin: 0 auto;
    }

    h2 {
      color: #333;
    }

    p {
      color: #666;
    }

    ul {
      list-style-type: none;
      padding: 0;
      text-align: center;
    }

    li {
      margin: 10px 0;
      max-width: 400px;
      margin: 0 auto; /* Center the list items */
    }

    a {
      display: block;
      padding: 10px;
      background-color: #007BFF;
      color: #fff;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    a:hover {
      background-color: #0056b3;
    }

    .topic {
      border: 1px solid #ddd;
      padding: 2px;
      border-radius: 5px;
      margin-bottom: 10px;
      cursor: pointer;
    }

    .topic h3 {
      color: #007BFF;
      margin: 0;
    }

    .columns {
      display: none;
      background-color: #f0f0f0; /* Adjust background color for visibility */
      padding: 10px; /* Add padding for clarity */
    }

    .column {
      flex: 1;
      padding: 10px;
    }

    .column h4 {
      margin-top: 0;
    }

    .custom-file-upload {
      border: 2px solid #007BFF;
      background-color: #007BFF;
      color: #fff;
      display: inline-block;
      padding: 6px 12px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .custom-file-upload:hover {
      background-color: #0056b3;
    }

    .input-file {
      display: none;
    }
  </style>
  <script>
    function toggleSections(index) {
      var theorySection = document.getElementById('theory_' + index);
      var practiceSection = document.getElementById('practice_' + index);

      if (theorySection.style.display === 'none') {
        theorySection.style.display = 'block';
        practiceSection.style.display = 'block';
      } else {
        theorySection.style.display = 'none';
        practiceSection.style.display = 'none';
      }
    }
    
  </script>
</head>
<body>
  <div class="container">
    <h2>Welcome</h2>
    <p>Here, you will learn the basics of the subject.</p>
    <% if (selectedSubject) { %>
    <h3>Selected Subject: <%= selectedSubject.name %></h3>
    <h3>Topics for <%= selectedSubject.name %></h3>
    <ul>
      <% selectedTopics.forEach(function(topic, index) { %>
      <li class="topic" onclick="toggleSections(<%= index %>)">
        <h3><a href="javascript:void(0)"><%= topic.name %></a></h3>
        <div class="columns" id="theory_<%= index %>">
          <div class="column">
            <h4>Theory:</h4>
            <ul>
              <% topic.theory.forEach(function(theoryPart) { %>
              <li><%= theoryPart %></li>
              <% }); %>
            </ul>
          </div>
          <div class="column">
            <h4>Practice Questions:</h4>
            <ul>
              <% topic.practice.forEach(function(practicePart) { %>
              <li><%= practicePart %></li>
              <% }); %>
            </ul>
          </div>
        </div>
      </li>
      <% }); %>
    </ul>
    <% }; %>
    
  </div>
</body>
</html>
