  <script>
    // Simulated data for subjects and topics (replace with your actual data)
    const classSubjects = {
      class1: [
        { id: 'math', name: 'Mathematics' },
        { id: 'science', name: 'Science' },
        // Add more subjects as needed for Class1
      ],
      class2: [
        { id: 'history', name: 'History' },
        { id: 'english', name: 'English' },
        // Add more subjects as needed for Class2
      ],
    };

    const subjectTopics = {
      math: ['Algebra', 'Trigonometry'],
      science: ['Biology', 'Physics'],
      history: ['Ancient History', 'Modern History'],
      english: ['Grammar', 'Literature'],
      // Add more subjects and topics as needed
    };

    function updateSubjects() {
      const classSelect = document.getElementById('classSelect');
      const subjectSelect = document.getElementById('subjectSelect');
      const topicSelect = document.getElementById('topicSelect');

      const selectedClass = classSelect.value;
      const subjects = classSubjects[selectedClass] || [];

      // Clear existing options and enable the subject dropdown
      subjectSelect.innerHTML = '<option value="" disabled selected>Select Subject</option>';
      topicSelect.innerHTML = '<option value="" disabled selected>Select Topic</option>';
      subjectSelect.disabled = false;
      topicSelect.disabled = true;

      subjects.forEach(subject => {
        const option = document.createElement('option');
        option.value = subject.id;
        option.text = subject.name;
        subjectSelect.appendChild(option);
      });
    }

    function updateTopics() {
      const subjectSelect = document.getElementById('subjectSelect');
      const topicSelect = document.getElementById('topicSelect');

      const selectedSubject = subjectSelect.value;
      const topics = subjectTopics[selectedSubject] || [];

      // Clear existing options and enable the topic dropdown
      topicSelect.innerHTML = '<option value="" disabled selected>Select Topic</option>';
      topicSelect.disabled = false;

      topics.forEach(topic => {
        const option = document.createElement('option');
        option.value = topic;
        option.text = topic;
        topicSelect.appendChild(option);
      });
    }
